#--- source.hlsl
RWStructuredBuffer<uint> WOut : register(u1);
RWStructuredBuffer<uint> QOut : register(u2);
RWStructuredBuffer<float> XOut : register(u3);

struct S {
  float x[2];
  uint q;
};

cbuffer cb0 : register(b0) {
  uint32_t3 w[4];
  S v[4];
}

[numthreads(4, 1, 1)]
void main(uint GI : SV_GroupIndex) {
  WOut[GI] = w[GI].z;
  QOut[GI] = v[GI].q;
  XOut[GI] = v[GI].x[1];
}

